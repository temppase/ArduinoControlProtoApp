<UserControl x:Class="ArduinoControlProto.Controllers.InfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArduinoControlProto.Controllers"
             mc:Ignorable="d" Background="Black" Foreground="Gray" FontSize="16"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="Header" TextAlignment="Center" FontWeight="Bold"
                   Background="DarkCyan" Foreground="Black" FontSize="18" Padding="10,5,5,5"/>
        <TextBlock Grid.Row="1" x:Name="Content" TextWrapping="Wrap" Padding="10,5,5,5"/>
    </Grid>
</UserControl>
